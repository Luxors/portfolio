---
import '@/assets/styles/main.scss';

import LayoutHeader from '@/components/layout/LayoutHeader.astro';
import LayoutNav from '@/components/layout/LayoutNav.astro';
import LayoutFooter from '@/components/layout/LayoutFooter.astro';
import LayoutPrefooter from '@/components/layout/LayoutPrefooter.astro';
import LayoutPageHeader from '@/components/layout/LayoutPageHeader.astro';

const currentUrl = Astro.url.pathname;
const isHomePage = currentUrl === '/';

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>fooseshoes</title>
  </head>
  <body>
    <LayoutHeader />
    <LayoutNav />
    <main class="main">
      {!isHomePage && <LayoutPageHeader title={pageTitle} />}
      <slot />
    </main>
    <LayoutPrefooter />
    <LayoutFooter />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
